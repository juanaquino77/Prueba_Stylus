@import "nib/vendor"
@import "nib/gradients"
vendor-prefixes = o ms moz webkit papitas official

body
	background white
	font-size 16px
.Container
	background linear-gradient(top, #f04422, #dede6d, #9ff283) no-repeat
	text-align center
	height 1000px
	padding 1em

.btn
	background red
	padding .5em .8em
	margin 0 2em
	border 2px solid orange
	color black
	font-weight: bold;
	border-radius 8px
	text-transform uppercase
	transition 1s background 
	&:hover
		background gray
		cursor crosshair
	&.yellow
		background yellow
		&:hover
			background gray
			cursor pointer
	&.green
		background green
		&:hover
			background gray
			cursor help

				
